<h1>All Pets</h1>

<%= link_to "Start an Application", "/applications/new" %><br>


<% @pets.each do |pet| %>
  <% if pet.adoptable == true %>
  <section id="pet-<%=pet.id%>">
      <h3 class="header-link"><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></h3>
      <%= image_tag "#{pet.image}", class: "img-container", style: "float:right"%><br>
      <div class="column">
      Approx Age: <%= pet.approximate_age %><br>
      Sex: <%= pet.sex%><br>
      Shelter: <%= link_to "#{pet.shelter.name}", "shelters/#{pet.shelter.id}" %><br>
      <a href="/pets/<%= pet.id %>/edit">Update Pet</a><br>
      <%= link_to "Delete Pet", "/pets/#{pet.id}", method: :delete %><br>
      </div>
    </section>
  <% end %>
<% end %>
